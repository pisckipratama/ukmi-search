<%- include("../partials/_header") %>
  <div class="container">
    <div class="card mt-3">
      <div class="card-header">
        <h3>Admin Panel</h3>
      </div>
      <div class="card-body">
        <div id="main-card" style="display: block;">
          <h5 class="card-title">Assalamualaikum, <%= user ? user.name : "Akhi / Ukhti" %></h5>
          <p class="card-text">Panel admin ini untuk memanage data dari kader UKMI, disini akhi/ukhti bisa menambah data
            kader, mengedit data kader, melihat semua data kader, bahkan menghapus data kader. Silahkan gunakan admin
            panel ini dengan baik dan bijak ya :)</p>
          <button onclick="myFunction()" class="btn btn-primary">Lihat Semua Data Kader</button>
        </div>

        <div id="myDIV" class="table-responsive" style="display: none;">
          <table class="table">
            <div class="d-flex justify-content-between">
              <div class="p-2 bd-highlight">Total data : <span class="text-muted"><%= data.length %> rows</span></div>
              <div class="p-2 bd-highlight">
                <a href="/admin/add" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Tambah Data Kader
                </a>
                <button onclick="myFunction()" class="btn btn-secondary btn-sm"><i class="fa fa-eye-slash"></i> Hide
                  Data
                </button>
              </div>
            </div>
            <thead>
              <tr>
                <th scope="col">NIM</th>
                <th scope="col">Nama Lengkap</th>
                <th scope="col">Jurusan</th>
                <th scope="col">No Handphone</th>
                <th scope="col" class="text-center">Action</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(item => { %>
              <tr>
                <th scope="row"><%= item.nim %></th>
                <td><%= item.namalengkap %></td>
                <td><%= item.jurusan %></td>
                <td><%= item.nohp %></td>
                <td class="text-center">
                  <a href="/admin/detail/<%= item.kaderid %>" class="btn btn-info btn-sm"><i
                      class="fa fa-info-circle"></i></a>
                  <a href="/admin/edit/<%= item.kaderid %>" class="btn btn-success btn-sm"><i
                      class="fa fa-edit"></i></a>
                  <a href="/admin/delete/<%= item.kaderid %>"
                    onclick="return confirm('Are you sure you want to delete this item?');"
                    class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="card-footer text-muted text-center">
        Dibuat dengan <i class="fa fa-heart fa-heart-o"></i> oleh Hamba Allah
      </div>
    </div>
    <br><br>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
  <script>
    function myFunction() {
      var element = document.getElementById("myDIV");
      if (element.style.display == "none") {
        element.style.display = "block"
      } else {
        element.style.display = "none"
      }
      var card = document.getElementById("main-card");
      if (card.style.display == "block") {
        card.style.display = "none"
      } else {
        card.style.display = "block"
      }
    }
  </script>
</body>

</html>